@model HomeCreateViewModel

@{
    ViewBag.Title = "Edit Book";
}
<form asp-controller="Home" asp-action="Edit" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
            <input asp-for="Author" placeholder="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name " class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name " placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Price " class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input asp-for="Price" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    
    <div asp-validation-summary="All" class="text-danger"> </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn-primary">Edit</button>
                <button asp-controller="home" asp-action="Index" type="submit" class="btn-primary">Cancel</button>
               
            </div>
        </div>
   

</form>